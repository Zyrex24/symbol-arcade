{
  "name": "wasm-arcade",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "description": "High-performance mini games arcade powered by WebAssembly and C++",
  "keywords": [
    "WASM",
    "WebAssembly",
    "games",
    "arcade",
    "C++",
    "React",
    "TypeScript",
    "mini-games"
  ],
  "author": "Zyrex24, DIEMOS192",
  "license": "MIT",
  "homepage": "https://symbol-arcade.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zyrex24/symbol-arcade.git"
  },
  "scripts": {
    "dev": "vite",
    "dev:watch": "concurrently \"bun run wasm:watch\" \"vite\"",
    "build": "NODE_ENV=production tsc -b && vite build",
    "build:clean": "rm -rf dist && NODE_ENV=production tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "wasm:build": "bash make.sh",
    "wasm:clean": "bash make.sh clean && bash make.sh",
    "wasm:watch": "nodemon --watch cpp --ext cpp --exec \"bash make.sh\""
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@rollup/rollup-linux-x64-gnu": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.0.5"
  },
  "trustedDependencies": [
    "@swc/core"
  ]
}
